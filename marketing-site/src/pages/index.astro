---
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import screenshotImage from '../assets/screenshot.avif';
import screenshotSmallImage from '../assets/screenshot-small.avif';
---

<Layout>
  <header class="header">
    <div class="container">
      <span>
        <!-- TODO: actual logo -->
        <a href="/" class="header__logo">üñêÔ∏è Back Of Your Hand</a> <span class="header__qualifier">for organizations</span>
      </span>
      <!-- TODO: show once header is sticky on scroll up -->
      <!-- <button class="button button--primary">
        Book a 15-min demo
      </button> -->
    </div>
  </header>
  
  <section class="section section--hero">
    <div class="container">
      <div class="section--hero__content">
        <h1 class="section__headline section--hero__headline">
          Know every street like the <em>back of your hand</em>
        </h1>
        <p class="section--hero__subhead">
          Drill response areas into memory
